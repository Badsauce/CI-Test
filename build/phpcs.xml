<ruleset name="NSCL/FRIB PHP Coding Standard">
    <description>An unholy union of cakePHP and PEAR standards</description>

    <!-- Pull the PEAR standard sniffers -->
    <!-- <rule ref="PEAR"/> -->

    <!-- Pull the cakePHP standard sniffers -->
    <rule ref="CakePHP">
        <!-- Exclude standards that conflict with ours -->
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent"/>
        <exclude name="Zend.Files.ClosingTag"/>
    </rule>

</ruleset>
